extends layout 

block layout-content 
  h1.page-title.text-center.mt-2 #{title}
  div.d-flex.justify-content-center.align-items-center.flex-column.m-2.p-2
    form.d-flex.justify-content-center.align-item-center.flex-column.text-start.p-5.bg-primary-subtle.text-dark.rounded-2.col-6(method="post", action="/admin/project/add/submit",enctype="multipart/form-data" )
        div.mb-3 
            label.form-label(for="name") Website Name: 
            input.form-control(type="text", id="name", name="website_name" placeholder="your website username" required)
        div.mb-3 
            label.form-label(for="user") User Name: 
            input.form-control(type="text", id="user", name="Github_username" placeholder="your github username" required)
            .form-text Forgot your username? Go to 
                a.text-danger.fst-italic(href="https://github.com/") Github
        div.mb-3 
            label.form-label(for="href") URL: 
            input.form-control(type="text", id="href", name="URL", placeholder="e.g. http://my-project-page-uri" required)
        div.mb-3
            label.form-label(for="repo") Repo: 
            input.form-control(type="text", id="repo", name="GitHub_repo", placeholder="e.g. https://github.com/useless-web" required)
        div.mb-4
            label.form-label(for="imageName") Upload Project Page:
            img(id="preview",alt="Current Screen", style="max-width: 100%; height: auto;display: none;")
            input.form-control(type="file", id="imageName", name="screen",placeholder="e.g. image,png" required)
            .form-text Note: Recommended size 4:3, and it will be stretched to radio 1:1 on the overview table
        button.btn.btn-outline-dark.mb-2(type="submit") Add the Project
        a.btn.btn-outline-dark(href="/admin/project") Cancel

block scripts
    script(type="module" src="/script/img-preview.js")
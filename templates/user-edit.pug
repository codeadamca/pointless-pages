extends layout 

block layout-content 
  h1.page-title.text-center #{title}
  div.d-flex.justify-content-center.align-items-center.flex-column.m-2.p-2
    form.d-flex.justify-content-center.align-item-center.flex-column.text-start.p-5.bg-dark-subtle.text-dark.rounded-2.col-6(method="post", action="/admin/user/edit/submit")
        input(type="hidden", name="userId", value=editUser._id)
        div.mb-3 
            label.form-label(for="username") Username: 
            input.form-control(type="username", id="username", name="username" value=editUser.username)
        div.mb-3
            label.form-label(for="email") Email: 
            input.form-control(type="email", id="email", name="email" value=editUser.email)
        div.mb-3 
            label.form-label(for="password") Password: 
            input.form-control(type="password", id="password", name="password")
        div.mb-4 
            label.form-label(for="role") Choose a role:
            select.form-control(id="role" name="role")
                option(value="user" selected=editUser.role === 'user') User 
                option(value="admin" selected=editUser.role === 'admin') Admin
        button.btn.btn-primary.mb-2(type="submit") Update the User
        a.btn.btn-primary(href="/admin/user") Cancel